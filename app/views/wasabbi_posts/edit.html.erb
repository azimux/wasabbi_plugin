<h1>Editing wasabbi_post</h1>
<% form_for(@wasabbi_post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @wasabbi_post %> |
<%= link_to 'Back', wasabbi_thread_path(@wasabbi_post.thread_id) %>
