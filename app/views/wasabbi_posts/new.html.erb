<h1>New wasabbi_post</h1>

<% form_for(@wasabbi_post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <%= f.hidden_field :thread_id %>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>

<%= link_to 'Back', wasabbi_posts_path %>
